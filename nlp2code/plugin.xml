<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="nlp2code.category"
            id="nlp2code.handler"
            name="Input Handler">
      </command>
      <category
            id="nlp2code.category"
            name="Handler Category">
      </category>
      <command
            id="Enable Persistent Querying"
            name="Enable Persisitent Queries">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="nlp2code.InputHandler"
            commandId="nlp2code.handler">
      </handler>
      <handler
            class="nlp2code.MenuHandlerEnable"
            commandId="Enable Persistent Querying">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="nlp2code.handler"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="nlp2code.toolbar">
            <command
                  commandId="nlp2code.handler"
                  icon="icons/stackoverflow.gif"
                  id="nlp2code.toolbar.handler"
                  style="push"
                  tooltip="Query Stack Overflow">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="nlp2code.menus.queryMenu"
               label="Stack Overflow"
               mnemonic="M">
            <command
                  commandId="Enable Persistent Querying"
                  id="nlp2code.menus.stackOverflow"
                  mnemonic="Stack Overflow"
                  tooltip="Enable persistent querying of Stack Overflow">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="nlp2code.contentassist"
         point="org.eclipse.jdt.ui.javaCompletionProposalComputer">
         <proposalCategory
           id="nlp2code.contentassist.category"
           name="Java completion proposals">
		 </proposalCategory>
		 
		 <proposalComputer
		    activate="true"
		    categoryId="nlp2code.contentassist.category"
		    class="nlp2code.JavaCompletionProposalComputer"
		    id="nlp2code.proposalcomputer">      
		 	<contentType id="org.eclipse.core.runtime.text"/>      
		 </proposalComputer> 
   </extension>

</plugin>
